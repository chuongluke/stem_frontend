<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="stem_courses" inherit_id="openeducat_lms.courses">
			<xpath expr="//div[@class='oe_structure']" position="after">
				<div id="myCarousel" class="carousel slide s_banner" data-interval="10000" style="height: 400px;">
					<ol class="carousel-indicators">
						<li data-target="#myCarousel" data-slide-to="0" class="active">
						</li>
						<li data-target="#myCarousel" data-slide-to="1" class="">
						</li>
						<li data-target="#myCarousel" data-slide-to="2" class="">
						</li>
					</ol>
					<div class="carousel-inner">
						<div class="item bg-alpha oe_img_bg active" style="background-image: url(&quot;/web/image/website.s_background_image_01&quot;);">
							<div class="container">
								<div class="row content">
									<div class="carousel-content col-md-4 col-md-offset-1 mt128 mb128">
										<h2 class=""></h2>
									</div>
									<div class="carousel-img col-md-6 col-md-offset-1 hidden-sm hidden-xs mt48"> 
									</div>
								</div>
							</div>
						</div>
						<div class="item bg-alpha oe_img_bg" style="background-image: url(&quot;/web/image/website.s_background_image_02&quot;);">
							<div class="container">
								<div class="row content">
									<div class="carousel-content col-md-offset-1 mt128 mb96 col-md-2">
										<h2 class=""></h2>
										<h4 class=""></h4>
									</div>
									<div class="carousel-img col-md-6 col-md-offset-1 hidden-sm hidden-xs mt48"> 
									</div>
								</div>
							</div>
						</div>
						<div class="item bg-alpha oe_img_bg oe_custom_bg" style="background-image: url(&quot;/website_blog/static/src/img/demo/blog_post_cover_1.jpg&quot;);">
							<div class="container">
								<div class="row content">
									<div class="carousel-content col-md-4 col-md-offset-1 mb96 mt128">
										<h2 class=""></h2>
									</div>
										<div class="carousel-img col-md-6 col-md-offset-1 hidden-sm hidden-xs mt48">
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="carousel-control left" data-target="#myCarousel" data-slide="prev" style="width: 10%" data-cke-saved-href="#myCarousel">
						
						<i class="fa fa-chevron-left" data-original-title="" title=""></i>
					</div>
					<div class="carousel-control right" data-target="#myCarousel" data-slide="next" style="width: 10%" data-cke-saved-href="#myCarousel">
					</div>
				</div>
			</xpath>
		</template>
    </data>
</odoo>
